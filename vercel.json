{
    "version": 2,
    "builds": [
      {
        "src": "client/**",
        "use": "@vercel/static-build",
        "config": {
            "distDir": "client/build",
            "buildCommand": "echo 'No build steps required for this project.'"
        }
      },
      {
        "src": "server/**",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/server/$1" },
      { "src": "/(.*)", "dest": "/client/$1" }
    ]
  }